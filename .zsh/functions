# cdd
source ~/.zsh/etc/cdd
function chpwd() {
    _reg_pwd_screennum
}

# functions
function reload() {
    source ~/.zshrc
}

# vim perldoc
functions vpd() {
    if [ $# -lt 1 ]; then;
        echo "Usage: vpd <perl-module>"
        return 1;
    fi
    perldoc -M Pod::Strip $* | vim -R -c 'set filetype=perl' -
}
