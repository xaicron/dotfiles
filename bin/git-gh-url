#!/usr/bin/env perl

use strict;
use warnings;
use feature 'say';

chomp(my $remote = `git config remote.origin.url`);
exit $? if $?;

if ($remote =~ /^git\@/) {
    # git@github.com:foo/bar.git
    $remote =~ s!:!/!;
    $remote =~ s!^git\@!https:!;
}
else {
    # git://github.com/foo/bar.git
    $remote =~ s!^git!https!;
}
$remote =~ s!\.git$!!;

say $remote;
